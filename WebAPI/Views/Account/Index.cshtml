@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coza Login & Register</title>
    <link rel="icon" type="image/png" href="/Client/images/icons/favicon.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<style>
    /* Reset mặc định */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background: #f0f0f0; /* Màu nền xám nhạt */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #333; /* Màu chữ đen nhạt */
    }

    /* Container chính */
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .brand h1 {
        font-size: 3rem;
        font-weight: bold;
        color: #000; /* Màu đen */
    }

    .brand p {
        font-size: 1.2rem;
        margin-bottom: 20px;
        color: #666; /* Màu xám đậm */
    }

    /* Form Section */
    .form-container {
        width: 100%;
        max-width: 400px;
        background: #fff; /* Nền trắng */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
    }

    .form {
        display: none;
    }

        .form.active {
            display: block;
        }

        .form h2 {
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #333; /* Màu chữ đen nhạt */
        }

        .form input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc; /* Viền xám nhạt */
            border-radius: 5px;
            background: #f9f9f9; /* Nền trắng nhạt */
            color: #333; /* Màu chữ đen nhạt */
            font-size: 1rem;
        }

            .form input::placeholder {
                color: #aaa; /* Màu placeholder xám nhạt */
            }

    .btn {
        width: 100%;
        padding: 10px;
        border: none;
        background: #333; /* Nền đen */
        color: #fff; /* Chữ trắng */
        font-size: 1.2rem;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
        transition: background 0.3s;
    }

        .btn:hover {
            background: #555; /* Màu đen nhạt hơn khi hover */
        }

    /* Link */
    .form p {
        margin-top: 10px;
        color: #666; /* Màu chữ xám đậm */
    }

    .form a {
        color: #333; /* Màu đen nhạt */
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

        .form a:hover {
            color: #000; /* Đậm hơn khi hover */
        }

    .container .brand a {
        text-decoration: none;
    }

</style>
<body>
    <div class="container">
        <!-- Logo -->
        <div class="brand">
            <a asp-controller="Home" asp-action="Index">
                <h1>COZA</h1>
            </a>
            <p>Exclusive Fashion</p>
        </div>

        <!-- Form Section -->
        <div class="form-container">
            <!-- Login Form -->
            <form asp-action="Index" id="loginForm" class="form active">
                <h2>Login</h2>
                @if (TempData["RegisterSuccess"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["RegisterSuccess"]
                    </div>
                }
                <div class="error mb-2">
                    @Html.Raw(ViewBag.error)
                    @Html.Raw(ViewBag.err)
                    @Html.Raw(ViewBag.errLock)
                </div>
                <input type="text" name="username" placeholder="Username">
                <input type="password" name="password" placeholder="Password">
                <button type="submit" class="btn">Login</button>
                <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Sign Up</a></p>
            </form>
        </div>
    </div>
</body>

</html>

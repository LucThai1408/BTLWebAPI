@model IEnumerable<WebAPI.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    /* Giao diện cho giá */
    .price-wrapper {
        display: flex;
        align-items: center;
        gap: 10px; /* Khoảng cách giữa giá gốc và giá sale */
    }

    .original-price {
        font-size: 0.9rem; /* Kích thước nhỏ hơn */
        color: #999; /* Màu xám nhạt */
        text-decoration: line-through; /* Gạch ngang */
    }

    .sale-price {
        font-size: 1.4rem; /* Kích thước lớn hơn */
        color: #e74c3c; /* Màu đỏ nổi bật */
        font-weight: bold;
    }

    .regular-price {
        font-size: 1.2rem; /* Kích thước vừa phải */
        color: black; /* Màu xanh lam */
        font-weight: bold;
    }

    /* Mặc định không gạch chân */
    .how-active1 {
        text-decoration: none !important;
    }

        /* Khi được chọn, thêm gạch chân */
        .how-active1.active {
            text-decoration: underline;
            font-weight: bold;
        }

</style>
<!-- Banner -->
<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                <!-- Block1 -->
                <div class="block1 wrap-pic-w">
                    <img src="/Client/images/banner-01.jpg" alt="IMG-BANNER">

                    <a asp-controller="Shop" asp-action="Index" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name ltext-102 trans-04 p-b-8">
                                Women
                            </span>

                            <span class="block1-info stext-102 trans-04">
                                Spring 2024
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09">
                                Shop Now
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                <!-- Block1 -->
                <div class="block1 wrap-pic-w">
                    <img src="/Client/images/banner-02.jpg" alt="IMG-BANNER">

                    <a asp-controller="Shop" asp-action="Index" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name ltext-102 trans-04 p-b-8">
                                Men
                            </span>

                            <span class="block1-info stext-102 trans-04">
                                Spring 2024
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09">
                                Shop Now
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                <!-- Block1 -->
                <div class="block1 wrap-pic-w">
                    <img src="/Client/images/banner-03.jpg" alt="IMG-BANNER">

                    <a asp-controller="Shop" asp-action="Index" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name ltext-102 trans-04 p-b-8">
                                Accessories
                            </span>

                            <span class="block1-info stext-102 trans-04">
                                New Trend
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09">
                                Shop Now
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5 mb-5">
                Product Overview
            </h3>
        </div>
        <div class="row isotope-grid">
            @if (Model == null || !Model.Any())
            {
                <h4 class="text-center">No data available</h4>
            }
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="@ViewBag.url@item.Image" alt="IMG-PRODUCT">

                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.ProductId" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                                Quick View
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.ProductId" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </a>

                                <span class="price-wrapper">
                                    @if (item.SalePrice > 0)
                                    {
                                        <span class="original-price text-muted">
                                            <s>$@Html.DisplayFor(modelItem => item.Price)</s>
                                        </span>
                                        <span class="sale-price text-danger">
                                            $@Html.DisplayFor(modelItem => item.SalePrice)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="regular-price">
                                            $@Html.DisplayFor(modelItem => item.Price)
                                        </span>
                                    }
                                </span>


                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="/Client/images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="/Client/images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45">
            <a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Load More
            </a>
        </div>
    </div>
</section>

